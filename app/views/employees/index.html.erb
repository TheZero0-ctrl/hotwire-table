<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="flex flex-col">
    <div class="-m-1.5 overflow-x-auto">
      <div class="p-1.5 min-w-full inline-block align-middle">
        <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden"> 
          <div class="px-6 py-4 grid gap-3 md:flex md:justify-between md:items-center border-b border-gray-200">
            <%= render 'filter_form' %>
          </div>
          <!-- Table -->
          <div class="min-w-full divide-y divide-gray-200">
            <!-- Header -->
            <div class="bg-gray-50 grid grid-cols-5">
              <div class="px-6 py-3 text-left">
                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">First Name</span>
              </div>
              <div class="px-6 py-3 text-left">
                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Last Name</span>
              </div>
              <div class="px-6 py-3 text-left">
                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Email</span>
              </div>
              <div class="px-6 py-3 text-left">
                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Department</span>
              </div>
              <div class="px-6 py-3 text-left">
                <span class="text-xs font-semibold uppercase tracking-wide text-gray-800">Hire Date</span>
              </div>
            </div>
            <!-- Header End -->
            <%= render 'employees', employees: @employees %>
          </div>
          <!-- End Table -->
        </div>
      </div>
    </div>
  </div>
</div>
